@model Restaurant

<section class="page-section">
    <div class="container">
        <div class="row">
            <img class="d-flex rounded img-fluid mb-3 mb-lg-0 col-6" src="~/img/products-03.jpg" alt="">
            <div class="bg-faded p-5 rounded col-6 mx-auto">
                <h1 class="section-heading mb-0">@Model.Name</h1>
                <h2 class="section-heading mb-0">
                    <span class="section-heading-upper">Id : @Model.Id</span>
